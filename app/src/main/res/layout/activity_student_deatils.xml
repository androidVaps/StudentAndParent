            android:src="@drawable/circle_crop" />


    </FrameLayout>-->

    <ImageView
        android:id="@+id/image_stud"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/txt_stud_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textSize="16sp"
            android:textColor="@color/colorPurpleDark" />

        <EditText
            android:id="@+id/edit_stud_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueLighter"
            android:focusable="false"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Reg.No"
            android:textSize="16sp"
            android:textColor="@color/colorPurpleDark" />

        <EditText
            android:id="@+id/edit_stud_regno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueLighter"
            android:focusable="false"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student D.O.A"
            android:textSize="16sp"
            android:textColor="@color/colorPurpleDark" />

        <EditText
            android:id="@+id/edit_stud_doa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueLighter"
            android:focusable="false"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/txt_stud_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student D.O.B"
            android:textSize="16sp"
            android:textColor="@color/colorPurpleDark" />

        <EditText
            android:id="@+id/edit_stud_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueLighter"
            android:focusable="false"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/txt_stud_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact No."
            android:textSize="16sp"
            android:textColor="@color/colorPurpleDark" />

        <EditText
            android:id="@+id/edit_stud_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueLighter"
            android:focusable="false"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/txt_stud_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="@color/colorPurpleDark" />

        <EditText
            android:id="@+id/edit_stud_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueLighter"
            android:focusable="false"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent" />


    </LinearLayout>

</LinearLayout>
