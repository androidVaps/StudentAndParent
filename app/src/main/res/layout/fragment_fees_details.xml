<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.san.myapplication.Fragments.FeesDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/orange300"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:text="I Term"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/orange300"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:text="I Term"
                    android:textColor="@color/black"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/term1amt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/orange200"
                    android:gravity="right|center"
                    android:text="4000"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/imgViewTerm1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/orange200"
                    android:paddingRight="1dp"
                    android:src="@drawable/details" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/light_blue_200"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:text="II Term"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/light_blue_200"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:text="II Term"
                    android:textColor="@color/black"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/term2amt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/light_blue_100"
                    android:gravity="center|right"
                    android:text="2000"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/imgViewTerm2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/light_blue_100"
                    android:paddingRight="1dp"
                    android:src="@drawable/details" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/teal_200"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:text="III Term"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/teal_200"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:text="III Term"
                    android:textColor="@color/black"
                    android:textStyle="normal"/>


                <TextView
                    android:id="@+id/term3amt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/teal_100"
                    android:gravity="center|right"
                    android:text="4000"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/imgViewTerm3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/teal_100"
                    android:paddingRight="1dp"
                    android:src="@drawable/details" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/purple_200"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:text="IVI Term"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/purple_200"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:text="IV Term"
                    android:textColor="@color/black"
                    android:textStyle="normal"/>


                <TextView
                    android:id="@+id/term4amt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/purple_100"
                    android:gravity="center|right"
                    android:text="4000"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/imgViewTerm4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/purple_100"
                    android:paddingRight="1dp"
                    android:src="@drawable/details"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@color/orange100"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Total Net Amount"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/netAmount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@color/orange100"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Paid Amount"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/paidAmount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@color/orange100"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Balance"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@color/orange100"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Concession"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/concession"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="4">

            <Button
                android:id="@+id/payAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/orange_600"
                android:text="Please select Term to pay"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
